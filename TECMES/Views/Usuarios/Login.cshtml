@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Login";
}
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-5 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-5">TECMES</h5>
                    @using (Html.BeginForm("Logar", "Usuarios"))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label>Email</label>
                            <input type="email" name="Email" class="form-control" placeholder="departamento@tecmes.com.br">
                        </div>
                        <div class="mb-3">
                            <label>Senha</label>
                            <input type="password" name="Senha" class="form-control" placeholder="Senha">
                        </div>
                        <br />

                        <div class="d-grid">
                            <button class="btn btn-lg btn-block btn-success text-uppercase fw-bold" id="btnEntrar">
                                Entrar
                            </button>

                        </div>
                    }
                    <br />

                    <div class="form-check mb-3 text-center">
                        <input class="form-check-input" type="checkbox" value="" id="rememberPasswordCheck">
                        <label class="form-check-label" for="rememberPasswordCheck">
                            Lembrar-me
                        </label>
                    </div>

                    <div class="text-center">
                        <a href="#">Esqueci minha senha ? </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    @if (!string.IsNullOrEmpty(ViewBag.Erro))
    {
        <script type="text/javascript">
        toastr.error("@ViewBag.Erro");
        </script>
    }

}
